.audioSmall90{
  width: 90%;
  height: 35px;
  background: white;
  border: 2px solid ghostwhite;
  box-shadow: 0px 0px 10px #888888;
  border-radius: 8px;
  text-align: center;
  font-size: 12px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

