.audioBox{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.audio{
  width: 80%;
  height: 70px;
  border: 1px solid ghostwhite;
  box-shadow: 0px 0px 10px #888888;
  background: white;
  border-radius: 8px;
  text-align: center;
  font-size: 12px;
  display: flex;
  flex-direction: row;
  align-items: center;
}