/* pages/recordShow/recordShow.wxss */
@import "../../lib/weui.wxss";
@import "../../lib/myui.wxss";
@import "../../lib/audio.wxss";
@import "../../lib/text.wxss";

.textMovable{
  font-size: 14px;
  font-weight: 200;
  margin-top: 4px;
  margin-left: 8px;
  color: white;
}

.viewHome {
  width: 80px;
  height: 32px;
  color: white;
  display: flex;
  flex-direction: column;
  align-items: left;
  text-align: left;
  border: 0px solid snow;
  border-radius: 5px;
  background: rgb(4, 190, 1);
  box-shadow: 0px 0px 5px grey;
  position: fixed;
  top: 12px;
  right: -5px;
}

.commentTips{
  border:1px solid rgb(240,240,240);
  border-radius:3px;
  background:white;
  height: 40px;
}

.showText{
  width: 80%;
  border:1px solid snow;
  border-radius:5px;
  background:grey;
  height: 30px;
  font-size:12px;
  color:white;
  display: flex;
  flex-direction: column;
  align-content: center;
  text-align: center;
}

button::after{
  border: 0;
}

.foot-group {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 40;
  width: 100%;
}